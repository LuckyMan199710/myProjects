/* pages/motion/Shake.wxss */

page {
    /* background-color: greenyellow; */
    height: 100%;
}

.panel_root {
    /* background-color: red; */
    height: 100%;
}

.view_top {
    position: absolute;
    display: block;
    height: 40%;
    width: 100%;
    background-color: #2d3132;
    text-align: center;
}

.view_bottom {
    position: absolute;
    top: 40%;
    display: block;
    height: 60%;
    width: 100%;
    background-color: #2d3132;
    text-align: center;
}

.img_top {
    position: absolute;
    bottom: 0;
    width: 8rem;
    height: 7rem;
    margin-bottom: -3.5rem;
    margin-left: -4rem;
    clip: rect(0px, 8rem, 3.5rem, 0px);
}

.img_bottom {
    position: absolute;
    top: 0;
    width: 8rem;
    height: 7rem;
    margin-top: -3.5rem;
    margin-left: -4rem;
    clip: rect(3.5rem, 8rem, 200px, 0px);
}

.btn_test {
    position: absolute;
    bottom: 0;
    margin: 2rem;
}

.win_line_top {
    position: absolute;
    bottom: 0;
    height: 0.3rem;
    width: 100%;
    display: block;
    background-color: gray;
    border-bottom: 1px solid black;
}

.win_line_bottom {
    position: absolute;
    top: 0;
    height: 0.3rem;
    width: 100%;
    display: block;
    background-color: gray;
    border-bottom: 1px top black;
}

.panel_bottom {
    width: 100%;
    position: absolute;
    top: 5rem;
    color: white;
}

.panel_content {
    width: 100%;
    position: relative;
    font-size: 0.8rem;
    text-align: center;
}

.img_loading {
    width: 1rem;
    height: 1rem;
}

.text_lable {
    font-size: 0.8rem;
    line-height: 2rem;
    height: 2rem;
}

.panel_result {
    position: fixed;
    z-index: 2000;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    /* animation: change 5s;
  -moz-animation: change 5s;    
  -webkit-animation: change 5s;    
  -o-animation: change 5s; */
    width: 90%;
    height: 500rpx;
    background: #fff;
    border-radius: 0.3rem;
}

