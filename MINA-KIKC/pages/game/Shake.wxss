.dialog-face {
    position: fixed;
    background: #a02418;
    height: 100%;
    width: 100%;
    z-index: 1000;
    top: 0;
    left: 0;
    opacity: 0.7;
}

/* 弹窗布局样式 */

.dialog-root {
    position: fixed;
    z-index: 2000;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

/* 弹窗容器 */

.dialog-wrapper {
    background: #e74c3c;
    width: 635px;
    height: 375px;
    overflow: hidden;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
}

.panel_result .close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.panel_result .close image {
    width: 50rpx;
    height: 50rpx;
}

.panel_result .content {
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
}

.panel_result .tit {
    text-align: center;
    margin-top: 80rpx;
    color: #333;
    font-size: 28rpx;
}

.panel_result .prize {
    height: 300rpx;
}

.panel_result .prize image {
    height: 100%;
    margin: 0 auto;
}

.panel_result .btnlist {
    display: flex;
    margin-left: -60rpx;
}

.panel_result .btnlist .item {
    margin-left: 60rpx;
    color: #c40;
}

/*结果提示*/

.dialog {
    background: rgba(0, 0, 0, 0.6);
    width: 100%;
    position: fixed;
    box-sizing: border-box;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 500;
}

.dialogWrap {
    width: 100%;
    height: 100%;
    position: relative
}

.dialogCtn {
    position: absolute;
    width: 80%;
    background: #fff;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1rpx solid #bbb;
    z-index: 500;
    border-radius: 8px;
}

.game_main {
	position: absolute;
	bottom: 30rpx;
	width: 100%;

}
.game_content {
	padding: 0 20rpx;
}
.rule {
	
