page{
	height: 100%;
	min-height: 100%;
}
.bannerurl{
  width: 100%;
  height: 200px;
}
.game_container{
	overflow: hidden;
	background-position: center center;
  min-height: 100%;
}

.container-out {
  height: 310px;
  width: 310px;
  background-color: rgba(204, 102, 0, 0.5);
  margin: 5px auto;
  /* box-shadow: 0 10px 0 #871a8e; */
  position: relative;
	border-radius: 40rpx;
}

.container-in {
  width: 300px;
  height: 300px;
  background-color: rgba(204, 102, 0, 0.5);
  border-radius: 40rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;

}

/**小圆球
box-shadow: inset 3px 3px 3px #fff2af;*/

.circle {
  position: absolute;
  display: block;
  border-radius: 50%;
  height: 20rpx;
  width: 20rpx;
}

.content-out {
  position: absolute;
  height: 90px;
  width: 90px;
  background-color: rgba(245, 240, 252, 0.75);
  border-radius: 15rpx;
}
.content-out.onn{
	background-color: rgba(245, 240, 252, 0.9);
}
.content-out.on{
	background-color: rgba(245, 240, 252, 1.5);
}

.imageurl.onn{
	background-color: rgba(0,0,0,0.5);
}
.imageurl.on{
	background-color: rgba(0,0,0,0.1);
}

/**居中 加粗*/

.start-btn {
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border-radius: 15px;
  height: 90px;
  width: 90px;
  background-color: #ffe400;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  font-weight: bolder;
  line-height: 90px;
}

.award-image {

  height: 100%;
  width: 100%;
	/*display: flex;*/
	align-items:center;
	justify-content:center;
	font-size: 11px;
	border-radius:15rpx;
}

.award-image.on{
	color:#c40;
	font-weight: bold;
}



.section{
	margin-bottom: 15px;
	
}
.section_inner{
	background-color: #fff;
	padding: 10px;
}
.rule_content{
  position: fixed;
  top: 7%;
  left: 7%;
  background: #fff;
  z-index: 100;
  min-width: 80%;
  min-height: 80%;
  padding: 0px 10px;
}
.game_rule{
	word-wrap: break-word;
	font-size: 12px;
}
.hidden{
  text-align: right;
}
.cons_point{
  color: #fff;
  font-size: 16px;
  border-radius: 100px;
  background: rgba(0, 0, 0, 0.5);
  width: 60%;
  margin: auto;
  padding: 5px 0px;
  text-align: center;
  margin-bottom: 20px;
  margin-top:15px;
}
.rule{
  text-align: right;
  color: #fff;
  font-size: 12px;
  margin-right: 40px;
}
.rule text{
  display: inline-block;  
  border-right: 2px solid; 
  border-bottom: 2px solid;  
  width: 6px; 
  height: 6px;  
  transform: rotate(-45deg); 
}
.prizetype{
  width: 60%;
  height: 60%;
  float: left;
  margin-left: 20%;
  margin-top: 5%;
}
.imageAward{
  width: 100%;
  height: 35%;
  text-align: center;
  font-size: 12px;
  overflow: hidden;
  float: left;
  margin-top:-5%;
  border-radius:15rpx;
} 
.imageAward.A{
  display: flex;
  height: 100%;
  align-items:center;
	justify-content:center;
  margin-top: 0;
  float: none;
}
.imageAward.F{
  display: flex;
  height: 100%;
  align-items:center;
	justify-content:center;
  margin-top: 0;
  float: none;
}
.imageAward.imageurl{
  display: flex;
  height: 100%;
  align-items:center;
	justify-content:center;
  margin-top: 0;
  float: none;
  position:absolute;
  top:0;
  left:0;
}
.clear{
  clear: both;
}

.rule{line-height: 40px;}


