/* 遮罩层 */
.shape{
	width: 100%;
	height: 100%;
	color: #333333;
	font-size: 26rpx;
	line-height: 60rpx;
	position: fixed;
	overflow: hidden;
	bottom: 0;
	top: 0;
	background: rgba(0,0,0,0.5);
  z-index: 998;
}
.rshape{
	width: 100%;
	height: 100%;
	color: #333333;
	font-size: 26rpx;
	line-height: 60rpx;
	position: fixed;
	overflow: hidden;
	bottom: 0;
	top: 0;
	background: rgba(0,0,0,0.5);
  z-index: 998;
}
.shape .listshow{
	width: 200rpx;
	height: 100%;
	background: #DDDDDD;
	animation:show 1s;
}
.shape .listhide{
	width: 100rpx;
	height: 100%;
	background: #DDDDDD;
	animation:hidden 1s;
}
.rshape .r-listshow{
	position: absolute;
	top: 0;
	right: 0;
	width: 600rpx;
	height: 100%;
	background: green;
	animation:r-show 1s;
}
.rshape .r-listhide{
	position: absolute;
	top: 0;
	right: 0;
	width: 600rpx;
	height: 100%;
	background: green;
	animation:r-hidden 1s;
}
@keyframes show{
	from{
		margin-left: -100px;
	}
	to{
		margin-left:0px;
	}
}
@keyframes hidden{
	from{
		margin-left: 0px;
	}
	to{
		margin-left:-100px;
	}
}
@keyframes r-show{
	from{
		margin-right: -600px;
	}
	to{
		margin-right:0px;
	}
}
@keyframes r-hidden{
	from{
		margin-right: 0px;
	}
	to{
		margin-right:-600px;
	}
}
.hide{
	display: none;
}
.show{
	display: block;
}
.rhide{
	display: none;
}
.rshow{
	display: block;
}