.refund {
  margin-top: 40rpx;
}

.refund .refund-list {
  
}

.refund .refund-list .refund-item {
  font-size: 28rpx;
  color: #999999;
  line-height: 36rpx;
}
.refund .refund-list .refund-item.active {
  /* font-size: 32rpx; */
  color: #333333;
  font-weight: bold;
}
.refund .refund-list .refund-item:nth-child(2) {
  margin-left: 20rpx;
  position: relative;
}

.refund .refund-list .refund-item:nth-child(2):after {
  content: '';
  position: absolute;
  top: 6rpx;
  left: -12rpx;
  width: 2rpx;
  height: 24rpx;
  background: #999999;
}
.refundReason {
  margin-top: 20rpx;
}
.refund-content {
  
  padding: 20rpx;
  background: #FFFFFF;
}
.refund-content .tt {
  font-size: 28rpx;
  color: #000;
  white-space: nowrap;
  line-height: 36rpx;
}

.textarea {
  width: 100%;
  height: 180rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 36rpx;
}
.sub-btn {
  width: 360rpx;
	height: 90rpx;
  margin: 40rpx auto;
	line-height: 90rpx;
	text-align: center;
	box-sizing: border-box;
	background-color: #333333;
	font-size: 34rpx;
	color: #FFFFFF;
	border-radius: 90rpx;
}
.arrow_down{
	display: inline-block;
	margin: 6rpx;  
	border-right: 2px solid #DE0A0A; 
	border-bottom: 2px solid #DE0A0A;  
	width: 10rpx; 
	height: 10rpx;  
	transform: rotate(45deg); 
	margin-top: 10rpx;
}
.arrow_up{
	display: inline-block;
	border-right: 2px solid #DE0A0A; 
	border-bottom: 2px solid #DE0A0A;  
	width: 10rpx; 
	height: 10rpx;  
	transform: rotate(-135deg); 
  margin-left: 6rpx;
}
.show{
	display: block;
}
.hide{
	display: none;
}