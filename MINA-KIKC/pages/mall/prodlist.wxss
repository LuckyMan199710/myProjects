.topmenu{width:100%;}
.topmenu .sortby{width:33%;display:inline-block;text-align:center;background:#e0e0e0;height:45px;line-height:45px;margin-right:1px;}
/*.topmenu .sortby:first-child{background: #f1f1f1;}
.topmenu .sortby:third-child{margin: 0;}*/
.topmenu .sortby.normal{background:#e0e0e0;}
.topmenu .sortby.is_checked{background:#f1f1f1;}
.prodtype_inner .prod_space{width:50%;}
.prod_space .disp_prod_name{
    display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;
    overflow: hidden;height: 32px;line-height: 16px;padding-top: 1px; font-size: 26rpx;
}
.prod_space .disp_price{font-size: 28rpx;
  color: #d4414c;
  font-weight: bold;
  line-height: 30px;}
.prod_space .disp_saleqty{color:#999;font-size: 13px;margin-left: 5px;}
.control_prodtype{background-color: #fff;}
.control_prodtype .prod_cover image{width:100%;}
.control_prodtype .prod_cover{
  width:100%;
  height:0;
  padding-bottom:100%;
  position:relative;
  display: block;
  overflow: hidden;
}
.discount {
  position: absolute;
  bottom: 0;
  left: 0;
  background: #AB1110;
  width: 100%;
  height: 50rpx;
}
.green {
  background: #4aab10;
}

.discount .tt, .discount .myprice {
  font-size: 24rpx;
  color: #ffffff;
  padding: 0 10rpx;
}
.disp_collet_btn{
  position: absolute; 
  top: 10rpx; 
  right: 10rpx; 
  padding: 10rpx;
  background: #ddd;
  border-radius:  50%;
  font-size: 16px;
	z-index: 2;
	width:20px;
	height: 20px;
}
.disp_buy_btn{
  position: absolute; 
  bottom: 20rpx; 
  right: 10rpx; 
  padding:8px;
  background: #ddd;
  border-radius:  50%;
  font-size: 16px;
	width:20px;
	height: 20px;
}
.control_prodclass .prod_cover image{width:100%;display: block;}
.control_prodclass .prod_cover{width:100%;height:0;padding-bottom:100%;position:relative;display: block;}
.prod_space_inner{position: relative;background: #fff;margin-bottom: 5px;}
.prod_space_inner::after{content: '';display: block;clear: both;}

.prodtype_size_S .prod_space{width:50%;display: inline-block;}
.prodtype_size_S .prod_space:nth-child(2n+1) .prod_space_inner{margin-right: 2px;}
.prodtype_size_S .prod_space:nth-child(2n) .prod_space_inner{margin-left: 2px;}

.prodtype_size_L .prod_space{width:100%;}
.prodtype_size_L .prod_space .prod_cover{float: left; width: 125px; padding-bottom: 125px;}
.prodtype_size_L .prod_space .prod_ctn{padding-left: 140px;padding-top:10px;}

.prodtype_size_L .prod_space_inner{margin-bottom: 0;padding:5px;}
.prodtype_size_L .prod_space{position: relative;}
.prodtype_size_L .prod_space::after{
  height: 0px;
  content: '';
  width:100%;
  border-top:1px solid #e3e5e9;
  position: absolute;
  bottom: 0;
  left:140px;
  display: block;
}
.prodtype_size_L .disp_buy_btn{
  bottom: 10px;
  right: 10px;
  padding:8px;
}

