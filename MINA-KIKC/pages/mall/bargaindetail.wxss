/*商品属性列表样式*/
.table {width:85%;margin:20px auto;}
.tr {width: 100%;display: flex;border:1px solid #ccc;justify-content: space-between;border-width:0 1px 1px 1px;}
.grade_row0 {border-width:1px;}
.th,.td {padding:5px 10px;line-height:20px;height:100%;}
.grade_cell_11 {width:25%;float:left;border:1px solid #ccc;border-width:0 1px 0 0;}
.grade_cell_22 {width:70%;float:left;}

/*拼团提示*/
.groupstatus_tip {font-size:14px;text-align:center;margin:0px 10px;background-color:#eee;line-height:20px;height:20px;padding-top:5px;}

/**团详情*/
.group_detail {margin-left:10px;margin-right:10px;font-size:12px;background-color:#eee;padding-top:50px;}
.group_member {margin-top:-30px;width:100%;display:flex;align-items:center;justify-content:space-between;}
.head_image {width:60px;height:60px;border-radius:50%;}
.group_member_nicker {width:40px;height:20px;line-height:20px;border-radius:10px;display:block;color:#fff;position:absolute;left:50%;top:0px;z-index:10px;}
.group_detail_middle {width:100%;text-align:center;margin:10px auto;color:#333;margin-top:-10px;}
.group_detail_bottom {width:100%;margin-top:25px;border-top:1px solid #bbb;position:relative;text-align:center;}
.group_detail_time {color:#bbb;background-color:#eee;position:absolute;top:-20px;height:40px;line-height:40px;display:flex;align-items:center;justify-content:center;left:50%;transform:translate(-50%,0);}
.group_time_cell {color:#fff;background-color:#666;padding:2px 5px;margin:0px 3px;}
.member_nicker_txt {width:60px;font-size:10px;display:block;}
.group_detail_top {height:80px;}
.group_row .group_detail_top {height:50px;}

/*邀请拼团*/
.groupvisit-main {width:100%;position:fixed;top:0px;left:0;right:0px;z-index:10;height:100%;background:rgba(0,0,0,.6);}
.groupvisit-content {background-color:#fff;position:fixed;top:10%;left:50%;transform:translate(-50%,0);width:275px;}
.groupvisit-action {background-color:#fff;position:fixed;bottom:0px;left:0px;display:flex;align-items:center;justify-content:center;font-size:12px;width:100%;padding:5px 0px;}
.groupvisit-cell {flex:1;text-align:center;position:relative;}

/*参团成功*/
.formgroup_mark {width:100%;position:fixed;top:0px;left:0;right:0px;z-index:10;height:100%;background:rgba(0,0,0,.6);}
.formgroup_wrap {background-color:#fff;position:fixed;top:20%;left:50%;width:80%;transform:translate(-50%,0);}
.formgroup_txt {text-align:center;font-size:16px;color:#fff;margin:20px auto;}
.formgroup_main {text-align:center;font-size:12px;color:#fff;margin:10px auto;height:25px;line-height:25px;display:flex;align-items:center;justify-content:center;}
.tip_time_cell {color:#666;background-color:#fff;padding:1px 3px;margin:0px 3px;order-radius:5px;}

/*砍价进度*/
.bargain_progress_main {width:100%;position:relative;}
.bargain_progress_item {display:inline-block;height:3px;margin:10px 0px;background:#eee;}
.progress_current_price {position:absolute;color:#fff;height:20px;line-height:20px;font-size:10px;border-radius:10px;padding:0px 10px;}
/*砍价导航*/
.bargain_navigation {display:flex;align-items:center;justify-content:center;width:100%;height:30px;line-height:30px;background-color:#fff;font-size:14px;border-bottom:1px solid #eee;}
.navigation_txt {width:100px;display:inline-block;text-align:center;}
/*砍价操作*/
.bargain_action_left {font-size:12px;height:50px;line-height:50px;width:50%;text-align:center;}
.bargain_action_right {font-size:12px;padding:13px 0px;width:50%;text-align:center;}
.bargain_action {background:#fff;color:#fff;width:100%;padding:0px;display:flex;align-items:center;justify-content:center;}
.bargain_over {font-size:12px;height:50px;line-height:50px;width:50%;text-align:center;background:#ddd;}
/*砍价列表*/
.bargain_detail {padding:0px 15px;font-size:14px;background-color:#fff;padding-top:15px;}
.bargain_cell {display:flex;align-items:center;justify-content:space-between;border-bottom:1px solid #eee;padding:10px 0px 15px;position:relative;}
.bargain_cell_left {display:inline-block;height:30px;line-height:30px;}
.bargain_cell_right {line-height:30px;height:30px;}
.bargain_cell image {float:left;display:inline-block;width:30px;height:30px;border-radius:50%;}
.bargain_cell .cell_left_txt {float:left;margin-left:10px;height:30px;line-height:30px;}
.bargain_cell .more_point {position:absolute;bottom:0px;left:15px;transform:translate(-50%,0);color:#fff;background:orange;font-size:10px;border-radius:20px;padding:0px 5px;line-height:15px;height:15px;}
.cell_left_txt text {display:inline-block;height:30px;line-height:30px;}
/*活动规则*/
.promotion_rule {position:fixed;top:50%;right:0px;z-index:100;float:right;width:15%;background:orange;border-top-left-radius:10px;border-bottom-left-radius:10px;line-height:25px;height:25px;text-align:center;}
.promotion_rule .rule_txt {display:block;font-size:12px;color:#fff;}