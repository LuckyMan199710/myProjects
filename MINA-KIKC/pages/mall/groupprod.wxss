@import "/utils/wxParse/wxParse.wxss";
page{
	background-color: #f7f7f7
}

.sku_item wx-text{border-radius: 3px;}
.sku_item wx-text.on {color:#fff;background:#f23030;}


.section{
	margin-bottom: 15px;
	
}
.section_inner{
	background-color: #fff;
	padding: 10px;
}

.prod_tit{
	color:#000;
}

.prod_price{
	color:red;
	font-weight: bold;
}

.action_bar{
	display: -webkit-box;
	text-align: center;
	padding: 0px;
}
.action_bar view{
	font-size: 13px;
}
.action_bar .action_list view{
	display: inline-block;
	width: 50%;
	line-height: 50px;
	color: #fff;
}
.addcart{
	background-color: #ffb03f;
}
.buynow{
	background-color: #f23030;
} 

.user_action{
	position:absolute;
  right:5px;
  bottom:10px;
  width: 80px;
}
.user_action view{
	display: inline-block;
	padding: 0 10px;
}
.img{
  width: 20px;
  height: 20px;
}
.pic_detail{
  width: 100%;
}
.cartsum{
  background: red;
  border: 1px solid red;
  border-radius: 100%;
  width: 15px;
  height: 15px;
  line-height: 15px;
  position: absolute;
  left: 13%;
  top: 5px;
  color: #fff;
  z-index: 100;
}
.cars_img{
  margin-top: 10px;
  width: 20px;
  height: 20px;
  position: relative;
}

















/* 待公用 */
.prodtype_inner .prod_space{width:50%;}
.prod_space .disp_prod_name{
    display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;
    overflow: hidden;height: 32px;line-height: 16px;padding-top: 1px; font-size: 12px;
}
.prod_space .disp_price{color: #c40;line-height: 30px;}
.prod_space .disp_saleqty{color:#999;font-size: 13px;margin-left: 5px;}
.control_prodtype .prod_cover image{width:100%;}
.control_prodtype .prod_cover{width:100%;height:0;padding-bottom:100%;position:relative;display: block;}
.disp_collet_btn{
  position: absolute; 
  top: 10rpx; 
  right: 10rpx; 
  padding: 10rpx;
  background: #ddd;
  border-radius:  50%;
  font-size: 16px;
	z-index: 2;
	width:20px;
	height: 20px;
}
.disp_buy_btn{
  position: absolute; 
  bottom: 10rpx; 
  right: 10rpx; 
  padding: 10rpx;
  background: #ddd;
  border-radius:  50%;
  font-size: 16px;
	width:20px;
	height: 20px;
}
.control_prodclass .prod_cover image{width:100%;display: block;}
.control_prodclass .prod_cover{width:100%;height:0;padding-bottom:100%;position:relative;display: block;}
.prod_space_inner{position: relative;background: #fff;margin-bottom: 5px;}

.prodtype_size_S .prod_space{width:50%;display: inline-block;}
.prodtype_size_S .prod_space:nth-child(2n+1) .prod_space_inner{margin-right: 2px;}
.prodtype_size_S .prod_space:nth-child(2n) .prod_space_inner{margin-left: 2px;}

.prod_num{
  color: #999;
  font-size: 14px;
}

/*无用列表样式*/
.grade_detail {margin:20px auto;width:85%;}
.grade_row {width:100%;border:1px solid #CCC;border-width:0 1px 1px 1px;}
.grade_row_0 {border-width:1px;}
.grade_cell_1 {line-height:20px;height:100%;font-size:12px;border:1px solid #CCC;padding:10px 5px 10px 10px;width:20%;float:left;display:inline-block;border-width:0 1px 0 0;}
.grade_cell_2 {line-height:20px;height:100%;font-size:12px;padding:10px 5px 10px 10px;width:65%;float:right;display:inline-block;}



/*商品属性列表样式*/
.table {width:85%;margin:20px auto;}
.tr {width: 100%;display: flex;border:1px solid #ccc;justify-content: space-between;border-width:0 1px 1px 1px;}
.grade_row0 {border-width:1px;}
.th,.td {padding:5px 10px;line-height:20px;height:100%;}
.grade_cell_11 {width:25%;float:left;border:1px solid #ccc;border-width:0 1px 0 0;}
.grade_cell_22 {width:70%;float:left;}

