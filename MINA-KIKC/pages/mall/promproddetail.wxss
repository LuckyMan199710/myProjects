@import "../common/newcarts.wxss";

page{
	background-color: #f7f7f7;
  height: 100%;
}
.container{padding-bottom: 70px;min-height: 100%;}

.sku_item wx-text{border-radius: 3px;}
.sku_item wx-text.on {color:#fff;background:#f23030;}

.section_inner{
	background-color: #fff;
	padding: 10px;
}

.prod_price{
	color:#f23030;
}

.action_bar{
	display: -webkit-box;
	text-align: center;
	padding: 0px;
}
.action_bar view{
	font-size: 13px;
}
.action_bar .action_list view{
	display: inline-block;
	width: 50%;
	line-height: 50px;
	color: #fff;
}
.addcart{
	background-color: #ffb03f;
}
.buynow{
	background-color: #f23030;
} 

