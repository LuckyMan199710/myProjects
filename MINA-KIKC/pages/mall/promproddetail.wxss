}
.prod_space .byinfo{color:#999;font-size:13px;}
.prod_space .disp_price{color: #c40;line-height: 30px;}
.prod_space .disp_saleqty{color:#999;font-size: 13px;margin-left: 5px;}
.control_prodtype .prod_cover image{width:100%;}
.control_prodtype .prod_cover{width:100%;height:0;padding-bottom:100%;position:relative;display: block;}
.prod_space_inner{position: relative;background: #fff;margin-bottom: 5px;}

.prodtype_size_L .prod_space{width:100%;display: inline-block;border-bottom:1px dashed #ddd;}
.prodtype_size_L .prod_space:last-child{border-bottom: none;}

.prodtype_size_L .disp_buy_btn{position: absolute; bottom:10px; width:20px;height:20px;padding:10px;right: 0;}

.prodtype_size_L .prod_space_inner navigator{display: -webkit-box;display: box;}
.prodtype_size_L .prod_cover{width: 80px;height: 80px;padding-bottom: 0}
.prodtype_size_L .prod_cover image{width: 80px;height: 80px;}
.prodtype_size_L .prod_ctn{ -webkit-box-flex: 1;margin-left: 10px;}

