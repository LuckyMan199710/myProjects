/* 顶部 */
.top{
	width: 100%;
	height: 300rpx;
	padding: 0 24rpx;
}
.top .shop_img image{
	width: 120rpx;
	height: 120rpx;
	border-radius: 4px;
}
.top .shop_title{
	margin-left: 20rpx;
}
/* 筛选 */
.order_list .order_cell{
	line-height:30px;
	height:30px;
	color:#aaa;
	padding:0px 20px;
}
.order_list .order_cell.on{
	color:red;
}
.order_title{
	display:flex;
	align-items:center;
	justify-content:space-between;
	z-index:200;
	width:100%;
	line-height:40px;
	height:40px;
	border-bottom:1px solid #eee;
	border-top:1px solid #eee;
	background:#fff;
}
.orderby_type{margin:0px auto;line-height:40px;height:40px;width:50%;text-align:center;}
.orderby_image{display:inline-block;position:relative;}
.orderby_image image {display:inline-block;width:5px;height:5px;margin:0px;}
.orderby_txt {display:inline-block;}