	line-height:30px;
	height:30px;
	color:#aaa;
	padding:0px 20px;
}
.order_list .order_cell.on{
	color:red;
}
.order_title{
display:flex;align-items:center;justify-content:space-between;position:fixed;top:0px;left:0px;z-index:200;width:100%;line-height:40px;height:40px;border-bottom:1px solid #eee;background:#fff;
