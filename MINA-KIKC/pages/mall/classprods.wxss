.prodgroup_size_L image{width:100%; height: 300rpx;}

.icon_txt{background: #AB1110;color:#fff;font-size:11px;padding: 0 3px;margin-right:10rpx;}
.icon_cu {
  background: #fdd000;
  color:#fff;font-size:11px;padding: 0 3px;margin-right:10rpx;
}
