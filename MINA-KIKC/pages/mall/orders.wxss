.arrow_next{
  display: inline-block;  
  margin: 2rpx;  
  border-right: 2px solid #ccc; 
  border-bottom: 2px solid #ccc;  
  width: 10rpx; 
  height: 10rpx;  
  transform: rotate(-45deg); 
  float: right;
  margin-top: 10rpx;
}
.center{
	background: #fff;
	width: 100%;
