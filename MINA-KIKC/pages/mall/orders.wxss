page{
	background-color: #f7f7f7;
}
.clear{clear:  both;}
.content{
  margin-top: 100rpx;
}
.orderstatus{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  z-index: 88;
}
.status{
	position: relative;
  line-height: 80rpx;
  text-align: center;
  font-size: 26rpx;
  background: #fff;
  color: #999999;
  box-sizing: border-box;
}
.curt{
  font-size: 30rpx;
  color: black;
  font-weight: bold;
  height: 100%;
}
.curt:before{
	content: '';
	position: absolute;
	bottom: 0;
	left: 50%;
	width: 60rpx;
	height: 6rpx;
	margin-left: -30rpx;
	background: #333333;
}
.section{
	margin-bottom: 15px;
}

.section_inner{
	background-color: #f5f5f5;
}

.addr_item{
	padding: 0;
	border-bottom: none;
  margin-top: 24rpx;
  background: #fff;
}

.addr_item:last-child{
	border-bottom:none; 
}
.gator{
  width: 100%;
}
.top{
  box-sizing: border-box;
  height: 72rpx;
  padding: 24rpx 24rpx 20rpx 24rpx;
}
