/* pages/trend/search.wxss */

.container {
  padding-bottom: 0rpx;
}
.search {
  padding: 0 20rpx;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background: #ffffff;
}

.search_input {
  width: 100%;
  height: 60rpx;
  border-radius: 60rpx;
  background: #d9ded8;
  position: relative;
}
.search_input input {  
  width: 70%;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.search_input .search_img {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.search_input .search_img image {
  width: 40rpx;
  height: 40rpx;
}

.search_list {
  padding: 0 30rpx;
}

.search_list .item {
  margin-top: 20rpx;
}

.search_list .item .tit {
  font-size: 28rpx;
  color: #040404;
  line-height: 60rpx;
}

.search_list .item .ul {
  margin-left: -10rpx;
  flex-flow: row wrap;
}

.search_list .item .ul .li {
  margin-left: 10rpx;
  margin-top: 10rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  background: #d9ded8;
  color: #333333;
  white-space: nowrap;
}


.classlist {
  height: 70rpx;
  border-top: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
  justify-content: center;
  align-items: center;
}
.classlist .item {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 70rpx;
  border-right: 1rpx solid #f4f4f4;
  background: #ffffff;
  color: #808080;
  font-size: 28rpx;
}
.classlist .item.active {
  background: #f3f3f3;
  color: #333333;
}
.classlist .item:nth-last-child(1) {
  border-right: none;
}