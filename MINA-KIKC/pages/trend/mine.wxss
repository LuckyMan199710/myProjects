/* pages/trend/mine.wxss */

.classlist {
  height: 70rpx;
  border-top: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
  justify-content: center;
  align-items: center;
}
.classlist .item {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 70rpx;
  border-right: 1rpx solid #f4f4f4;
  background: #ffffff;
  color: #808080;
  font-size: 28rpx;
}
.classlist .item.active {
  background: #f3f3f3;
}
.classlist .item:nth-last-child(1) {
  border-right: none;
}



.timechoose {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 88888;
}

.timechoose .content {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 88;
  width: 70%;
  height: 600rpx;
  margin-top: -300rpx;
  margin-left: -35%;
  background: #464646;
}

.timechoose .content .tips {  
  justify-content: center;
  align-items: center;
  flex-flow: column nowrap;
  color: #fff;
  position: relative;
  height: 100%;  
}
.close {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  font-size: 48rpx;
  line-height: 1;
  color: #bd1218;
}
.timechoose .content .tips .img_nav {
  width: 130rpx;
  height: 130rpx;
}
.timechoose .content .tips .img_nav image {
  width: 100%;
  height: 100%;
}
.timechoose .content .tips .tit {
  width: 70%;
  font-size: 46rpx;
  color: #fff;
  text-align: center;
  line-height: 2;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.6);
}

.timechoose .content .tips .ul {
  margin-top: 40rpx;
  text-align: center;
}

.timechoose .content .tips .ul .li {
  font-size: 32rpx;
  font-weight: bolder;
  color: #fff;
  line-height: 2;
}

.timechoose .mark {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
}
