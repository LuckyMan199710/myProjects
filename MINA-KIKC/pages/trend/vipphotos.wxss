/* pages/trend/vipphotos.wxss */

.header {
  position: relative;
  height: 440rpx;
}

.info_base {
  width: 100%;
  height: 160rpx;
  background: -moz-linear-gradient(left, #aa201e, #811110);
  background: -webkit-linear-gradient(left, #aa201e, #811110);
  background: linear-gradient(left, #aa201e, #811110);
  background: -o-linear-gradient(left, #aa201e, #811110);
  position: absolute;
  top: 0;
  left: 0;
}

.info {
  position: relative;
  padding-top: 70rpx;
  z-index: 88;
  justify-content: center;
  align-items: center;
  flex-flow: column nowrap;
}

.info .info_img {
  width: 160rpx;
  height: 160rpx;
  padding: 6rpx;
  border: 1rpx solid #860d1e;
  border-radius: 50%;
  
}

.info .info_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
  background: #f1dddc;
}

.info_name {
  font-size: 24rpx;
  color: #333;
  margin-top: 20rpx;
}

.info .wrapcon {
  margin-top: 30rpx;
}

.info .wrapcon .wrap_left {
  text-align: right;
  position: relative;
}

.info .wrapcon .wrap_left:after {
  content: '';
  position: absolute;
  top: -10%;
  right: -20rpx;
  width: 1rpx;
  height: 120%;
  background: #ad0324;
}

.info .wrapcon .wrap_right {
  text-align: left;
  margin-left: 40rpx;
}

.info .wrapcon .li .num {
  font-size: 32rpx;
  color: #ad0324;
}

.info .wrapcon .li .dd {
  font-size: 28rpx;
  color: #ad0324;
}

.scroll_H {
  background: #f5f5f5;
}

.list {
  padding: 0 25rpx 20rpx;
  flex-flow: row wrap;
  margin-left: -20rpx;
}

.list .item {
  background: #fff;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 340rpx;
}

.list .item .img_nav {
  width: 100%;
  height: 340rpx;
  display: block;
  position: relative;
}

.list .item .img_nav image.photo_img {
  width: 100%;
  height: 100%;
}

.list .item .fun {
  padding: 10rpx 20rpx;
  align-items: center;
}

.list .item .fun .zan {
  align-items: center;
  flex: 1;
}

.list .item .fun .zan image {
  width: 30rpx;
  height: 30rpx;
}

.list .item .fun .zan .num {
  margin-left: 10rpx;
  font-size: 22rpx;
}

.list .item .fun .date {
  font-size: 22rpx;
  color: #a5a5a5;
}
