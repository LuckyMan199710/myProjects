/* pages/trend/allworks.wxss */

.banner {
  width: 100%;
  height: 120rpx;
  position: relative;
}

.banner image {
  width: 100%;
  height: 120rpx;
  overflow: hidden;
}

.classlist {
  height: 70rpx;
  border-top: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
  justify-content: center;
  align-items: center;
}

.classlist .item {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 70rpx;
  border-right: 1rpx solid #f4f4f4;
  background: #fff;
  color: #808080;
  font-size: 28rpx;
}

.classlist .item.active {
  background: #f3f3f3;
  color: #333;
}

.classlist .item:nth-last-child(1) {
  border-right: none;
}

.act_add {
  position: fixed;
  z-index: 55;
  bottom: 160rpx;
  right: 20rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
  padding: 10rpx;
}

.act_add .con {
  height: 100%;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
}

.act_add .con image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.act_add .con .txt {
  font-size: 24rpx;
  line-height: 1;
  margin-top: 6rpx;
  color: #cd071e;
}

.act_add .con .txt.big {
  font-size: 28rpx;
}
