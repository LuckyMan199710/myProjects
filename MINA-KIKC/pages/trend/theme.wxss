/* pages/trend/theme.wxss */

.container {
  padding-bottom: 20rpx;
}

.title {
  font-size: 46rpx;
  color: #333;
  font-weight: bolder;
  padding: 30rpx 0;
  text-align: center;
}

.bgimg {
  padding: 0 30rpx;
}

.bgimg image {
  width: 100%;
}

.upload {
  flex-flow: column nowrap;
  align-items: center;
  margin-top: 20rpx;
}

.upload .border {
  width: 200rpx;
  height: 50rpx;
  border: 4rpx solid #333;
}

.upload .upload_btn {
  width: 200rpx;
  height: 50rpx;
  box-shadow: 5px 5px 0 #333;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
}

.upload .desc {
  font-size: 16rpx;
  margin-top: 30rpx;
}

.themeUpload {
  padding: 20rpx;
}

.themeUpload .img_nav {
  width: 100%;
  height: 710rpx;
  overflow: hidden;
  background: #f7f7f7;
  position: relative;
}

.themeUpload image.dtlImg {
  position: absolute;
}
.themeUpload .img_nav .reduction {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx 16rpx;
  background: #e20227;
  color: #fff;
  font-size: 24rpx;
  text-indent: 8rpx;
  letter-spacing:8rpx;
  text-align: center;
  line-height: 1;
  border-radius: 46rpx;
}
.canvas {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  z-index: -100;
}

.themeUpload .desc {
  color: #808080;
  text-decoration: underline;
  text-align: center;
  margin-top: 80rpx;
}

.themeUpload .floor {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.themeUpload .floor .mybtn {
  padding: 20rpx;
}

.themeUpload .floor .mybtn button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.themeUpload .floor .mybtn button.reset {
  background: #2a2a2a;
}

.themeUpload .floor .mybtn button.submit {
  background: #e20227;
  margin-top: 20rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.images image {
  text-align: center;
}

.timechoose {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 88888;
}

.timechoose .content {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 88;
  width: 100%;
  height: 100vh;
}

.timechoose .content .tips {
  margin-top: 240rpx;
  /* justify-content: center; */
  align-items: center;
  flex-flow: column nowrap;
  color: #fff;
  height: 100%;
}

.timechoose .content .tips .tit {
  width: 70%;
  font-size: 46rpx;
  color: #fff;
  text-align: center;
  line-height: 2;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.6);
}

.timechoose .content .tips .ul {
  margin-top: 20rpx;
}

.timechoose .content .tips .ul .li .dd {
  font-size: 32rpx;
  color: #fff;
  line-height: 2;
}
.timechoose .content .tips .mybtn {
  padding: 10rpx 100rpx;
  border: 2rpx solid #fff;
  margin-top: 60rpx;
  font-size: 28rpx;
  color: #fff;
}

.timechoose .mark {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.8);
}
