/* pages/trend/upload.wxss */

.upload {
  padding: 20rpx;
}

.upload .img_nav {
  width: 100%;
  height: 710rpx;
  overflow: hidden;
  position: relative;
}

.upload .img_nav image {
  width: 100%;
  height: 100%;
}

.Label {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx dashed #e9e9e9;
}

.Label .ul .li {
  background: #e4b80f;
  margin-left: 20rpx;
  padding: 4rpx 10rpx;
  text-align: center;
  line-height: 28rpx;
  font-size: 22rpx;
  color: #fff;
  display: inline-block;
}

.list {
  display: flex;
  flex-flow: row wrap;
  padding: 10rpx 0;
}

.list .item {
  height: 46rpx;
  align-items: center;
  margin-left: 20rpx;
}

.list .item .desc {
  background: #e4b80f;
  padding: 4rpx 10rpx;
  text-align: center;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 22rpx;
  color: #fff;
  display: inline-block;
}

.list .item .reduce {
  width: 46rpx;
  height: 46rpx;
  margin-left: 10rpx;
}

.list .item .reduce image {
  width: 100%;
  height: 100%;
}

.upload .floor {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.upload .floor .mybtn {
  padding: 20rpx;
}

.upload .floor .inputBox {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  background: #f3f3f3;
  justify-content: center;
  align-items: center;
}

.upload .floor .inputBox .zdy_input {
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 80rpx;
  text-align: center;
  width: 480rpx;
}

.upload .floor .inputBox .input_holder {
  color: #646464;
  font-size: 16rpx;
}

.upload .floor .inputBox .add {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 20rpx;
  top: 50%;
  margin-top: -25rpx;
}

.upload .floor .inputBox .add image {
  width: 50rpx;
  height: 50rpx;
  display: block;
}

.upload .floor .mybtn button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.upload .floor .mybtn button.reset {
  background: #2a2a2a;
}

.upload .floor .mybtn button.submit {
  background: #e20227;
  margin-top: 20rpx;
}



.timechoose {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 88888;
}

.timechoose .content {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 88;
  width: 100%;
  height: 100vh;
}

.timechoose .content .tips {
  margin-top: 240rpx;
  /* justify-content: center; */
  align-items: center;
  flex-flow: column nowrap;
  color: #fff;
  height: 100%;
}

.timechoose .content .tips .tit {
  width: 70%;
  font-size: 46rpx;
  color: #fff;
  text-align: center;
  line-height: 2;
}

.timechoose .content .tips .ul {
  /* margin-top: 20rpx; */
  text-align: center;
}

.timechoose .content .tips .ul .li {
  font-size: 32rpx;
  color: #fff;
  line-height: 2;
}
.timechoose .content .tips .mybtn {
  padding: 10rpx 100rpx;
  border: 2rpx solid #fff;
  margin-top: 60rpx;
  font-size: 28rpx;
  color: #fff;
}

.timechoose .mark {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.8);
}