/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.auth-contain {
	width:100%;
	position:fixed;
	top:0px;
	left:0;
	right:0px;
	z-index:10;
	height:100%;
	background:rgba(0,0,0,.6);
}
.auth-wrap {
	background-color:#fff;
	position:fixed;
	top:45%;
	left:50%;
	transform:translate(-50%,-50%);
	height:240px;
	width:90%;
	border-radius:5px;
}
.sys_tip {
	font-size:15px;
	text-align:center;
	color:#2b2b2b;
	margin:30px 10px 15px 10px;
}
.sys_tip_list {
	font-size:15px;
	text-align:center;
	color:#999;
	margin:0px 0px 30px 0px;
}
.sys_tip_before {
	width:5px;
	display:inline-block;
	margin-right:10px;
	vertical-align:2px;
	height:5px;
	background-color:#7b7b7b;
	border-radius:50px; /* 图形的半径 */
}
.auth-btn {
	width:200px;
	height:35px;
	line-height:35px;
	background-color:#03bd00;
	font-size:14px;
	color:#fff;
	border-radius:5px;
}

.reset-btn {
  margin-top: 20rpx;
  width:200px;
	height:35px;
	line-height:35px;
	background-color:#999999;
	font-size:14px;
	color:#fff;
	border-radius:5px;
}