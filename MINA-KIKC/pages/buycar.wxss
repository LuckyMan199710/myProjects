page{padding-bottom: 60px;}
.action_bar{
	display: -webkit-box;
	text-align: center;
	padding: 0px;
}
.action_bar view{
	font-size: 13px;
}
.action_bar .action_list view{
	display: inline-block;
	 width: 100%; 
	line-height: 50px;
	color: #fff;
}
.addcart{background-color: #ffb03f;}
.buynow{background-color: #f23030;} 

.section_tit{padding: 10px;}
.section_tit .shop_name{color:#999}
.section_tit .promo_name{color:#f23030;text-decoration: underline;}
.prodtype_inner{border-bottom: 1px solid #ddd;}

.prod_space{margin-bottom: 10px;margin-top: 5px;}
.prod_space .disp_prod_name{
    display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;
    overflow: hidden;line-height: 15px;font-size: 12px;
}
.prod_space .disp_sku_name{
    display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 1;
    overflow: hidden;height: 20px;line-height: 20px;font-size: 12px;
		color:#999;
}
.prod_space .disp_price{color: #c40;line-height: 30px;}
.control_prodtype .prod_cover .mask_txt{position:absolute;width:100%;height:100%;background:rgba(158, 158, 158, 0.79);color:#fff;font-size: 13px;line-height: 70px;height:70px;overflow:hidden;text-align:center;}
.control_prodtype .prod_cover image{width:100%;height: 100%;display: block;}
.prod_space_inner{position: relative;background: #fff;margin-bottom: 5px;}

.prodtype_size_L .prod_space_inner{display: -webkit-box;}
.prodtype_size_L .prod_cover{width: 70px;height: 70px;position:relative;}
.prodtype_size_L .prod_cover image{width: 70px;height: 70px;}
.prodtype_size_L .prod_space .prod_ctn{margin-left: 10px;-webkit-box-flex: 1;position: relative;margin-right: 5px;}


.counter{position:absolute;bottom:0;right:0;}
.counter_wrap{padding: 0}
.counter_down, .counter_up {height: 25px;width: 25px;line-height: 25px;}
.counter_num,.counter_numinput{height: 25px;line-height: 25px;min-height: 25px;max-width: 45px;}


.promos{margin-left: 49px;background-color: #f7f7f7;padding: 5px;}
.promos_brief{font-size:12px;color:#999;position: relative;}
.promos_select{position: absolute;right: 5px;top: 0;text-decoration: underline;}

.group_root{text-align:right;line-height:30px;font-size:12px;color:#999;margin:0 10px;border-top:1px dashed #aaa;}

.promo_type{background:#f23030;color:#fff;border-radius: 3px;padding: 3px;display: inline-block;font-size: 12px;width: 100rpx;text-align: center;}
.promo_link{float:right;text-decoration:underline;}
.ml20 {
  margin-left: 20rpx;
}
.ml10 {
  margin-left: 10rpx;
}
.discount {
  color: #f23030;
  font-size: 24rpx;
  line-height: 36rpx;
  margin-top: 10rpx;
}

.discount .info {
  margin-top: 10rpx;
}
.discount .price text {
  font-weight: bold;
  font-size: 28rpx;
}
.green {
  background: green;
}
.green_color {
  color: green;
}
.js_edit{position: absolute;left: 0;top: 0;line-height: 50px;padding: 0 10px;}

.action_idx{width:70%;border-top:1px solid #d2d2d2;background:rgba(255,255,255,0.9);text-align:right;}

.radio{padding:20px 10px;display:block;}