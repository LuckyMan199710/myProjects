.myclassorder {
  background: #fff;
  padding: 32rpx 24rpx 30rpx 24rpx;
  box-sizing: border-box;
  /* position: fixed;
  top: 0;
  left: 0; */
}
.fixedTop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 88;
}
.fixedTopHL {
  font-size: 0;
  height: 320rpx;
}
.headclass {
	border-bottom: 1rpx solid #DDDDDD;
	padding-bottom: 20rpx;
	box-sizing: border-box;
}
.navigator-arrow {
  padding-right: 20rpx;
  position: relative;
  margin-left: 24rpx;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 14rpx;
  width: 14rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #666666;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  right: 20rpx;
}
.circle{
	height: 14rpx;
	width: 14rpx;
	background-color:black;
	border-radius: 50%; 
	margin-right: 10rpx;
}
.head-left {
  padding: 0 38rpx;
}
.head-left .txt {
  font-size: 26rpx;
  color: #333;
}
.headclass .inputs {
  width: 100%;
  height: 70rpx;
  background-color: #f7f8fa;
  border-radius: 30px;
  position: relative;
  color: #C9C9C9;
  padding: 0 38rpx;
}
.headclass .inputs .close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 15rpx;
  right: 20rpx;
}
.headclass .inputs input {
  color: #333333;
  font-size: 28rpx;
  margin-left: 10rpx;
  width: 400rpx;
}
.headclass .inputs .inputs_icon{
	height: 40rpx;
	width: 40rpx;
  margin-left: 56rpx;
}
.headclass .inputs input::-webkit-input-placeholder {
  color: #c5c6c8;
  font-size: 24rpx;
}
.headclass .qr_code{
	text-align: center;
	margin: 0 auto;
	font-size: 22rpx;
	margin-left: 50rpx;
}
.headclass .qr_code .qr_codeimg{
  width: 40rpx;
  height: 40rpx;
}
.headclass .select{
	font-size: 24rpx;
	font-weight: bold;
	margin-top: 30rpx;
}
