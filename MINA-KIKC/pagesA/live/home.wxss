/* pagesA/live/home.wxss */

.container {
  min-height: 100vh;
  background: #f4f4f4;
}
.live {
  min-height: 100vh;
  padding: 20rpx 24rpx 120rpx;
}

.live-list {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  /* // padding: 0 24rpx; */
  overflow: hidden;
  padding-bottom: 40rpx;
  /* // background: #F2F2F2; */
}

.live-list .live-left {
  width: 342rpx;
}

.live-list .live-left .live-item:nth-child(even) {
  height: 406rpx;
}

.live-list .live-left .live-item:nth-child(odd) {
  height: 567rpx;
}

.live-list .live-right {
  width: 342rpx;
  margin-left: 18rpx;
}

.live-list .live-right .live-item:nth-child(even) {
  height: 567rpx;
}

.live-list .live-right .live-item:nth-child(odd) {
  height: 406rpx;
}

.live-list .live-item {
  width: 100%;
  height: 406rpx;
  position: relative;
  border-radius: 14rpx;
  overflow: hidden;
}

.live-list .live-item:not(:first-child) {
  margin-top: 18rpx;
}

.live-list .live-item .live-image {
  width: 100%;
  height: 100%;
}

.live-list .live-item .live-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.live-list .live-item .live-status {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  height: 48rpx;
  background: rgba(71, 71, 71, 0.5);
  border-radius: 24rpx;
  overflow: hidden;
}

.live-list .live-item .live-status .desc {
  width: 76rpx;
  height: 48rpx;
  background: #333;
  font-size: 20rpx;
  line-height: 48rpx;
  color: #f99b3d;
  font-weight: normal;
  text-align: center;
}

.live-list .live-item .live-status .txt {
  padding: 0 12rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #fff;
  font-weight: normal;
}

.live-list .live-item .live-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.live-list .live-item .live-content .live-floor {
  padding: 0 6rpx 20rpx 14rpx;
}

.live-list .live-item .live-content .live-name {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
  font-weight: normal;
}

.live-list .live-item .live-content .live-info {
  margin-top: 12rpx;
}

.live-list .live-item .live-content .live-info .live-logo {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.live-list .live-item .live-content .live-info .txt {
  max-width: 266rpx;
  overflow: hidden;
  /* margin-left: 8rpx; */
  font-size: 20rpx;
  line-height: 28rpx;
  color: #fff;
  font-weight: normal;
}

.live-list .live-item .live-content .live-info .zan {
  height: 30rpx;
}

.live-list .live-item .live-content .live-info .zan .icon {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
}

.live-list .live-item .live-content .live-info .zan .num {
  margin-left: 5rpx;
  font-size: 22rpx;
  line-height: 30rpx;
  color: #fff;
  font-weight: normal;
}
