/* pagesA/live/video.wxss */

.video_content {
  width: 100%;
  height: 100vh;
  position: relative;
}

.video_content .video {
  width: 100%;
  height: 100vh;
}

.info {
  position: absolute;
  left: 10rpx;
}

.info .back {
  margin-top: -10rpx;
  padding: 10rpx;
}

.info .back .back_img {
  width: 40rpx;
  height: 40rpx;
}

.goods {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 10;
}

.goodscontent {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  width: 640rpx;
  margin-left: -340rpx;
  background: rgba(0, 0, 0, 0.4);
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  z-index: 88;
}

.goodscontent .goods_tit {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
  font-weight: normal;
}

.goodscontent .goodsList {
  height: 560rpx;
  overflow-y: scroll;
  overflow-x: hidden;
}

.goodscontent .goodsList .goods_item {
  margin-top: 20rpx;
  padding: 15rpx 15rpx;
  border-radius: 10rpx;
  background: #fff;
}

.goodscontent .goodsList .goods_item .goods_limit {
  width: 100%;
  height: 130rpx;
}

.goodscontent .goodsList .goods_item .img_nav {
  width: 130rpx;
  height: 130rpx;
}

.goodscontent .goodsList .goods_item .img_nav image {
  width: 130rpx;
  height: 130rpx;
}

.goodscontent .goodsList .goods_item .goods_content {
  margin-left: 18rpx;
}

.goodscontent .goodsList .goods_item .goods_content .goods_name {
  height: 88rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #333;
  font-weight: normal;
}

.goodscontent .goodsList .goods_item .goods_content .price_content {
  height: 42rpx;
}

.goodscontent .goodsList .goods_item .goods_content .price_content .price {
  font-size: 26rpx;
  line-height: 42rpx;
  color: #faac5a;
  font-weight: normal;
  padding-right: 4rpx;
}

.goodscontent .goodsList .goods_item .goods_content .price_content .price2 {
  font-size: 26rpx;
  line-height: 42rpx;
  color: #bdbdbd;
  font-weight: normal;
  padding-right: 4rpx;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.goods_icon {
  position: absolute;
  bottom: 100rpx;
  right: 0;
  width: 154rpx;
  height: 154rpx;
  z-index: 8;
}

.goods_icon .limit {
  width: 154rpx;
  height: 154rpx;
  border-radius: 50%;
}

.goods_icon .limit .icon {
  width: 154rpx;
  height: 154rpx;
}
