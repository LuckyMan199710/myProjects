/* pagesA/live/replay.wxss */

.container {
  min-height: 100vh;
  background: #f4f4f4;
}

.live_list {
  padding: 20rpx 20rpx;
}

.live_list .live_item {
  border-radius: 16rpx;
  background: #fff;
  overflow: hidden;
}

.live_list .live_item:not(:first-child) {
  margin-top: 30rpx;
}

.live_list .live_item .img_nav {
  width: 100%;
  height: 440rpx;
  position: relative;
}

.live_list .live_item .img_nav .play {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.live_list .live_item .img_nav .play image {
  width: 100rpx;
  height: 100rpx;
}

.live_list .live_item .img_nav .live_bg {
  width: 100%;
  height: 440rpx;
}

.live_list .live_item .img_nav .status {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 24rpx;
  overflow: hidden;
}

.live_list .live_item .img_nav .status .icon {
  width: 76rpx;
  height: 48rpx;
  background: #333;
}

.live_list .live_item .img_nav .status .icon image {
  width: 35rpx;
  height: 35rpx;
}

.live_list .live_item .img_nav .status .desc {
  width: 76rpx;
  height: 48rpx;
  background: #333;
  font-size: 24rpx;
  line-height: 48rpx;
  color: #f99b3d;
  font-weight: normal;
  text-align: center;
}

.live_list .live_item .img_nav .status .txt {
  padding: 0 12rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #fff;
  font-weight: normal;
}

.live_list .live_item .live_content {
  padding: 0 36rpx 20rpx 20rpx;
}

.live_list .live_item .live_content .head {
  padding: 24rpx 0 20rpx;
}

.live_list .live_item .live_content .head .icon {
  width: 40rpx;
  height: 40rpx;
}

.live_list .live_item .live_content .head .icon image {
  width: 40rpx;
  height: 40rpx;
}

.live_list .live_item .live_content .head .title {
  margin-left: 10rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #999;
  font-weight: bold;
  max-width: 500rpx;
}

.live_list .live_item .live_content .head .st {
  font-size: 26rpx;
  line-height: 36rpx;
  color: #f99b3d;
  font-weight: normal;
}

.live_list .live_item .live_content .floor {
  height: 60rpx;
}

.live_list .live_item .live_content .floor .info {
  height: 60rpx;
}

.live_list .live_item .live_content .floor .info .logo {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.live_list .live_item .live_content .floor .info .name {
  margin-left: 10rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999;
  font-weight: normal;
}

.live_list .live_item .live_content .floor .subscribe {
  width: 170rpx;
  line-height: 34rpx;
  border: 1rpx solid #ffa700;
  text-align: center;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #ffa700;
  border-radius: 34rpx;
  padding: 12rpx 0;
}

.live_list .live_item .live_content .floor .subscribe .txt {
  font-size: 24rpx;
  line-height: 34rpx;
  color: #ffa700;
  font-weight: normal;
}
